<% if current_user %>  
  <ol class="breadcrumb">
    <li class="active">Inbox </li>
    <li>/ <a href="/send">Send Message</a></li>
  </ol>

  <div class="peep-container">
    <% if @messages.count > 0 %>
      <ul class="list-none">
      <% @messages.each do |message| %>
        <li class="peep-box">
        <div class="peep-content">
        From: <em>@<%= message.sender.username %></em><br>
        <%= message.date_time.strftime("%d %b %Y, %I:%M %p") %><br>
        <em><%= message.title %></em>
        </div>
        <div class="comment-container">
        <%= message.text %>
        </div></li>
      <% end %>
      </ul>
    <% else %>
      <div class="peep-box">
        <div class="peep-content">
          <h1>Inbox empty!</h1>
        </div>
      </div>
    <% end %>
  </div>
<% end %>